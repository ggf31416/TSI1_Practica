<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<div ng-app="tsi" ng-controller="aldeaCtrl">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="row">
                <button class="btn btn-default" ng-click="listaTecnologias()">Tecnologias</button>
            </div>
            <div class="row">
                <div class="col-md-2" ng-repeat="rec in $root.listaRecursos">
                    <img class="recursosTablero" ng-src="{{rec.Imagen}}"
                         ng-click="editCell(casilla.id)" />{{rec.Valor}}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 imagenFondo" ng-style="style">
                    <div class="row" ng-repeat="row in $root.tablero.Columnas">
                        <img class="col-md-1 col-sm-1 col-xs-1 col-centered columnasTablero handPointer" ng-repeat="casilla in row.Fila" ng-attr-idCasilla="{{casilla.Id}}" ng-src="{{getImgCasilla(casilla.Id)}}"
                             ng-click="editCell(casilla)" />
                    </div>
                </div>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="dialogoConstruir" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Edificio a construir</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-sm-2 col-md-2 col-lg-2">Imagen</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">Nombre</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">Tiempo de construccion</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2" ng-repeat="rec in $root.listaRecursos">
                                            <img class="recursosTablero" ng-src="{{rec.Imagen}}" />
                                        </div>
                                    </div>
                                    <div class="row handPointer" ng-click="addEdificio(e.Id)" ng-repeat="e in $root.listaEdificios">
                                        <div class="col-sm-2 col-md-2 col-lg-2"><img width="50" height="50" ng-src="{{e.Imagen}}" /></div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">{{e.Nombre}}</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">{{e.TiempoConstruccion}}</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2" ng-repeat="rec in $root.listaRecursos">{{getCostoRecurso(e, rec.Id)}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Edificio -->
            <div class="modal fade" id="dialogoDatosEdificio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Edificio</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-3 col-md-3 col-lg-3">
                                    <div class="row">
                                        <h4>Nombre</h4>
                                        <div class="col-sm-9 col-md-9 col-lg-9">
                                            <span class="">{{entidad.Nombre}}</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <h4>Vida</h4>
                                        <div class="col-md-9">
                                            <span>{{entidad.Vida}}</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <h4>Ptos. ataque</h4>
                                        <div class="col-md-9">
                                            <span>{{entidad.Ataque}}</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <h4>Ptos. defensa</h4>
                                        <div class="col-md-9">
                                            <span>{{entidad.Defensa}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-9 col-md-9 col-lg-9">
                                    <div class="row">
                                        <img ng-src="{{entidad.Imagen}}" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal Tecnologias -->
            <div class="modal fade" id="dialogoDatosTecnologias" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Tecnologias</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-sm-2 col-md-2 col-lg-2">Imagen</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">Nombre</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">Tiempo de construccion</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2" ng-repeat="rec in $root.listaRecursos">
                                            <img class="recursosTablero" ng-src="{{rec.Imagen}}" />
                                        </div>
                                    </div>
                                    <div class="row handPointer" ng-click="actualizarTecnologia(e.Id)" ng-repeat="e in $root.listaTecnologias">
                                        <div class="col-sm-2 col-md-2 col-lg-2"><img width="50" height="50" ng-src="{{e.Imagen}}" /></div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">{{e.Nombre}}</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2">{{e.TiempoConstruccion}}</div>
                                        <div class="col-sm-2 col-md-2 col-lg-2" ng-repeat="rec in $root.listaRecursos">{{getCostoRecurso(e, rec.Id)}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>